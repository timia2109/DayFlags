    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start DayFlags.Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DayFlags.Server/bin/Debug/net8.0/DayFlags.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DayFlags.Server",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Start dayflags.webapp Vite",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev",
            "cwd": "${workspaceFolder}/dayflags.webapp"
        }
    ],
    "compounds": [
        {
            "name": "Start DayFlags Server + webapp",
            "configurations": [
                "Start DayFlags.Server",
                "Start dayflags.webapp Vite"
            ]
        }
    ]
}
